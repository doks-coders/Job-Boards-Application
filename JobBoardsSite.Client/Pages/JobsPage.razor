@page "/"

<MudGrid>
	<MudItem xs="12" md="6">
		<SearchItem Label="Search Country" Value="@Country" SearchItems="All||Nigeria||Ghana||South America" ValueChanged="(e)=>{Country = e;}" />
	</MudItem>

	<MudItem xs="12" md="6">
		<SearchItem Label="Search Skill" Value="@SelectedSkills" SearchItems="@(ListStringConstants.Skills)" ValueChanged="(e)=>{SelectedSkills = e;}" />
	</MudItem>

	<MudItem xs="12" md="6">
		<SearchItem Label="Search Work Type" Value="@WorkType" SearchItems="All||Full Time||Part TIme||Contract" ValueChanged="(e)=>{WorkType = e;}" />
	</MudItem>
</MudGrid>
<div class="d-flex justify-center my-2">
	<MudButton Variant="Variant.Outlined" OnClick="RetrievePage">Search</MudButton>
</div>


